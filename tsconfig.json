{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "esModuleInterop":true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "index.ts", "src/fizzBuzz.ts", "src/__tests__/fizzBuzz.test.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
